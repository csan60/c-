<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cl.dao.ZinvDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cl.entity.ZinvEntity">
        <id column="id" property="id" />
        <result column="addtime" property="addtime" />
        <result column="zhanghao" property="zhanghao" />
        <result column="mima" property="mima" />
        <result column="xingming" property="xingming" />
        <result column="xingbie" property="xingbie" />
        <result column="shouji" property="shouji" />

        <result column="touxiang" property="touxiang" />
        <result column="guanlian_huanzhe_id" property="guanlianHuanzheId" />
        <result column="beizhu" property="beizhu" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, addtime, zhanghao, mima, xingming, xingbie, shouji,  touxiang, guanlian_huanzhe_id, beizhu
    </sql>

    <select id="selectListView" parameterType="map" resultType="com.cl.entity.view.ZinvView" >
        SELECT <include refid="Base_Column_List" />
        FROM zinv
        <where>
            ${ew.sqlSegment}
        </where>
    </select>

    <select id="selectView" parameterType="map" resultType="com.cl.entity.view.ZinvView" >
        SELECT * FROM zinv
        <where>
            ${ew.sqlSegment}
        </where>
    </select>

</mapper>